{{>header}}
{{#if items}}
<div class="table-responsive">
  <table class="table table-hover" id="stats">
    <thead>
      <tr>
        <th>Stad</th>
        <th>Antal anslutna browsers</th>
      </tr>
    </thead>
    <tbody>
      {{#each items}}
        <tr>
          <td><strong>{{location}}</strong></td>
          <td>{{num}}
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{else}}
  <div class="jumbotron">
    <h2>Inga anslutna browsers just nu :(</h2>
  </div>
{{/if}}
